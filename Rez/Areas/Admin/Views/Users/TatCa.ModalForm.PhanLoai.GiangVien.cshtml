@model Rez.Models.GiangVien
<div class="tab-pane" id="giangvien">
    <div class="form-group">
        <label asp-for="@Model.TrinhDo">Trình độ</label>
        <select asp-for="@Model.TrinhDo" class="form-control select2bs4" style="width: 100%;">
            <option>Đại học</option>
            <option>Cao đẳng</option>
            <option>Thạc sĩ</option>
            <option>Tiến sĩ</option>
        </select>
        <span asp-validation-for="@Model.TrinhDo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.DonViCongTac">Đơn vị công tác</label>
        <input asp-for="@Model.DonViCongTac" class="form-control" placeholder="Ví dụ: Trường THPT Huỳnh Thúc Kháng">
        <span asp-validation-for="@Model.DonViCongTac" class="text-danger"></span>
    </div>
</div>